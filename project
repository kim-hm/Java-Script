<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Java Script 기말과제</title>

    <script src="https://code.jquery.com/jquery-3.2.1.min.js">
    </script>
    <style media="screen">
      #p1 {
        border: 1px solid white;
        height: 50px;
        text-align: center;
        vertical-align: middle;
        line-height: 100px;
        left: 50%; /* x축 좌표값 */
        top: 50%; /* y축 좌표값 */
        position: absolute;
        border-radius: 50px;
        float: left;
        width: 50px;
        overflow: hidden;
      }
      #p2 {
        border: 1px solid blue;
        float: left;
        width: 25px;
        height: 200px;
        left: 10px;
        top: 300px;
        background-color: blue;
        position: absolute;
      }
      #p3 {
        border: 1px solid red;
        float: left;
        width: 25px;
        height: 200px;
        right: 10px;
        top: 300px;
        background-color: red;
        position: absolute;
      }
    </style>
  </head>
  <body>
    <div id="p1">
      <img src="images.jpg" style="width: 60px; height: auto;">
    </div>
    <div id="p2"></div>
    <div id="p3"></div>


      <script>
      let moveAmount = 10;
      let p1Left = 600;
      let p1Top = 300;
      let keyDiv = null;
      function moveTo(left,top){
        p1.style.left = left + 'px';
        p1.style.top = top + 'px';
      }
      function moveRight(){
        //오른쪽 벽 충돌여부 확인
        if((p1Left + 80) >= window.innerWidth)
        moveAmount = -10;    //이동방향을 반대로(왼쪽으로) 변경한다.
        //왼쪽 벽 충돌여부 확인
        if(p1Left <= 0 )
        moveAmount = 10;
        p1Left += moveAmount;
        moveTo(p1Left, p1Top);
      }
      function moveDown(){
        //오른쪽 벽 충돌여부 확인
        if((divTop <= 0) >= window.innerWidth)
        moveAmount = -10;    //이동방향을 반대로(왼쪽으로) 변경한다.
        //왼쪽 벽 충돌여부 확인
        if(divTop + 80)
        moveAmount = 10;
        divTop += moveAmount;
        moveTo(p1Left, p1Top);
      }
      window.onload = function(){
       moveTo(p1Left, p1Top);
       keyDiv = setInterval(moveRight, 50);
       showWindowSize();
        window.onresize = showWindowSize;
     }
      // div 키보드로 움직이기
      $(function(){
      var keypress = {}, // 어떤 키가 눌려 있는지 저장
      p2x = 10, p2y = 250,p3x = 1330, p3y = 250, speed = 3, $p2 = $('#p2'), $p3 = $('#p3');
      setInterval(function(){ // 주기적으로 검사
      if(keypress['87']) p2y -= speed; // up - w
      if(keypress['83']) p2y += speed; // down - s
      if(keypress['65']) p2x -= speed; // left - a
      if(keypress['68']) p2x += speed; // right - d

      if(keypress['38']) p3y -= speed; // up - ↑
      if(keypress['40']) p3y += speed; // down - ↓
      if(keypress['37']) p3x -= speed; // left - ←
      if(keypress['39']) p3x += speed; // right - →

      $p2.css({top: p2y, left: p2x});
      $p3.css({top: p3y, left: p3x});
      }, 10); // 매 0.01 초마다 실행

      $(document).keydown(function(e){ // 어떤 키가 눌렸는지 저장
      keypress[e.which.toString()] = true;
      });
      $(document).keyup(function(e){ // 눌렸던 키를 해제
      keypress[e.which.toString()] = false;
      });
      });
      // -------------------------------------------------
      </script>
  </body>
</html>
